<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@android:color/transparent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_one_row_song_play_music"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ava6" />

    <TextView
        android:padding="5dp"
        android:id="@+id/txt_one_row_song_play_music_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_one_row_song_play_music"
        android:layout_toEndOf="@+id/img_one_row_song_play_music"
        android:layout_toRightOf="@+id/img_one_row_song_play_music"
        android:text="TextView" />

    <TextView
        android:padding="5dp"
        android:id="@+id/txt_one_row_song_play_music_singer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_one_row_song_play_music_song_name"
        android:layout_toEndOf="@+id/img_one_row_song_play_music"
        android:layout_toRightOf="@+id/img_one_row_song_play_music"
        android:text="TextView" />

    <ImageButton
        android:padding="10dp"
        android:id="@+id/btn_one_row_song_play_music_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:tint="@color/colorPrimary"
        app:srcCompat="@android:drawable/stat_notify_more" />

</RelativeLayout>